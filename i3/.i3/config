exec          xautolock -time 5 -locker '/home/ashhar/.i3/scripts/cool-i3-lock' -detectsleep \
                        -killtime 30 -killer 'pm-suspend-hybrid' \
                        -notify 30 -notifier "notify-send -u normal -t 10000 -- 'LOCKING screen in 30 seconds'" &

exec          mpd

# exec          gtk-redshift

# Start ncmpcpp on workspace 10
exec          --no-startup-id i3-msg 'workspace $workspace10, exec i3-sensible-terminal -e ncmpcpp, $workspace10'

# Last.fm scrobbling for mpd
exec          >~/.mpdscribble/log
exec          mpdscribble --log ~/.mpdscribble/log --conf ~/.mpdscribble/mpdscribble.conf

# SHORTCUT KEYS FOR APPLICATIONS
# =====================================

bindsym       Print                    exec scrot --multidisp '%Y-%m-%d_%H-%M-%S_$wx$h.png' \
                                       -e 'mv $f --target ~/Pictures/Screenshots/' \
                                       && exec notify-send 'Screenshot taken'
bindsym       Ctrl+Print               exec sleep 0.2 && \
                                       scrot --select --multidisp '%Y-%m-%d_%H-%M-%S_$wx$h.png' \
                                       -e 'mv $f --target ~/Pictures/Screenshots/' \
                                       && exec notify-send 'Screenshot taken'

# TOUCHPAD CONFIGURATION
# =====================================

# Use xinput --list to find out number of your pointer device (either synaptics touchpad or some obscure name) and set $dev_num.
set           $dev_num                 14

# Two finger scroll
exec          xinput --set-prop $dev_num "Synaptics Two-Finger Scrolling" 1 1
# Turn on corner coasting, edge scrolling
exec          xinput --set-prop $dev_num "Synaptics Edge Scrolling" 1 1 0
# Set kinetic scroll (defaults are 20, 50)
exec          xinput --set-prop $dev_num "Synaptics Coasting Speed" "20.0" "20.0"
# Turn on natural scrolling (default values are 111, 30)
exec          xinput --set-prop $dev_num "Synaptics Scrolling Distance" -50, -30
# Turn on palm detection
exec          xinput --set-prop $dev_num "Synaptics Palm Detection" 1

# I3GAPS
###############################################################################

for_window [class="^.*"]               border pixel 1

smart_borders                          on
gaps inner                             15
gaps outer                             0

# Workspace Overrides
workspace     $workspace4              gaps inner 0
workspace     $workspace6              gaps inner 0
workspace     $workspace6_1            gaps inner 0
workspace     $workspace6_2            gaps inner 0
workspace     $workspace9              gaps inner 0

set           $mode_gaps               Gaps: (o) outer, (i) inner
set           $mode_gaps_outer         Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set           $mode_gaps_inner         Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym       $mod+Shift+g             mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym   o                        mode "$mode_gaps_outer"
    bindsym   i                        mode "$mode_gaps_inner"
    bindsym   Return                   mode "default"
    bindsym   Escape                   mode "default"
}

mode "$mode_gaps_inner" {
    bindsym   plus                     gaps inner current plus 5
    bindsym   minus                    gaps inner current minus 5
    bindsym   0                        gaps inner current set 0

    bindsym   Shift+plus               gaps inner all plus 5
    bindsym   Shift+minus              gaps inner all minus 5
    bindsym   Shift+0                  gaps inner all set 0

    bindsym   Return                   mode "default"
    bindsym   Escape                   mode "default"
}

mode "$mode_gaps_outer" {
    bindsym   plus                     gaps outer current plus 5
    bindsym   minus                    gaps outer current minus 5
    bindsym   0                        gaps outer current set 0

    bindsym   Shift+plus               gaps outer all plus 5
    bindsym   Shift+minus              gaps outer all minus 5
    bindsym   Shift+0                  gaps outer all set 0

    bindsym   Return                   mode "default"
    bindsym   Escape                   mode "default"
}
