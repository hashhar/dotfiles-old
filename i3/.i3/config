# MOUSE BINDINGS
# =====================================

# Disable focus switching using mouse hover (clicking would still tranfer focus)
focus_follows_mouse                    no

# Middle mouse click on titlebar kills window
bindsym       --release button2        kill

# Mod + Right mouse click on title bar toggles floating mode
bindsym       $mod+button3             floating toggle

# MEDIA KEYS
# =====================================

# Pulse Audio controls (Use pactl list to find the correct sink number and replace $sink_num with the correct sink number.)
set           $sink_num                1

# Increase/Decrease sound volume by 5%
bindsym       XF86AudioRaiseVolume     exec --no-startup-id pactl set-sink-volume $sink_num +5%; \
                                       exec pkill -RTMIN+10 i3blocks
bindsym       XF86AudioLowerVolume     exec --no-startup-id pactl set-sink-volume $sink_num -5%; \
                                       exec pkill -RTMIN+10 i3blocks

# Increase/Decrease sound volume by 1%
bindsym       Ctrl+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $sink_num +1%; \
                                        exec pkill -RTMIN+10 i3blocks
bindsym       Ctrl+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $sink_num -1%; \
                                        exec pkill -RTMIN+10 i3blocks

# Mute sound
bindsym       XF86AudioMute            exec --no-startup-id pactl set-sink-mute $sink_num toggle; \
                                       exec pkill -RTMIN+10 i3blocks

# Media player controls (Needs playerctl to work. See https://github.com/acrisci/playerctl/)
bindsym       XF86AudioPlay            exec playerctl play-pause; \
                                       exec mpc toggle; \
                                       exec pkill -RTMIN+10 i3blocks
bindsym       XF86AudioNext            exec playerctl next; \
                                       exec mpc next; \
                                       exec pkill -RTMIN+10 i3blocks
bindsym       XF86AudioPrev            exec playerctl previous; \
                                       exec mpc prev; \
                                       exec pkill -RTMIN+10 i3blocks

# SCREEN BRIGHTNESS KEYS
# =====================================

# Sreen brightness controls (Needs xbacklight installed)
bindsym       XF86MonBrightnessUp      exec xbacklight -inc 10
bindsym       XF86MonBrightnessDown    exec xbacklight -dec 10

bindsym       Ctrl+XF86MonBrightnessUp exec xbacklight -inc 1
bindsym       Ctrl+XF86MonBrightnessDown exec xbacklight -dec 1

