# Dmenu
# bindsym       $mod+d                   exec dmenu_run

# Dmenu Desktop (Only lists applications with a .desktop file)
#bindsym       $mod+Shift+d             exec --no-startup-id i3-dmenu-desktop
bindsym       $mod+Shift+d             exec i3-dmenu-desktop --dmenu='rofi -dmenu -show run -i -p "Applications:" -location 2 -lines 5 -sidebar-mode -width 30 -padding 5 -opacity 85 -font "Droid Sans Mono 14" -bw 5 -bc "$inactive-bg-colour" -bg "$inactive-bg-colour" -fg "$text-colour" -hlbg "$bg-colour" -hlfg "$text-colour"'

# TIP: -active represents the active window or application
#      hlbg/hlfg represents the currently highlighted menu item
# Rofi
bindsym       $alt+d                   exec rofi -show run -lines 12 -location 8 -eh 2 -width 30 -padding 25 -opacity 85 \
                                                 -bw 10 -bc "$inactive-bg-colour" -bg "$inactive-bg-colour" -fg "$text-colour" \
                                                 -hlbg "$bg-colour" -hlfg "$text-colour" \
                                                 -font "Droid Sans Mono 16"

bindsym       $mod+d                   exec rofi -show run -lines 12 -location 0 -eh 1 -width 1366 -padding 340 -opacity 85 \
                                                 -bw 0 -bc "$inactive-bg-colour" -bg "$inactive-bg-colour" -fg "$text-colour" \
                                                 -hlbg "$bg-colour" -hlfg "$text-colour" \
                                                 -font "Droid Sans Mono 16"

# Rofi Window Switcher
bindsym       $alt+Tab                 exec rofi -show window -location 4 -eh 2 -padding 25 -opacity 85 -bw 10 -bc "$inactive-bg-colour" \
                                                 -bg "$inactive-bg-colour" -bg-active "$bg-colour" -fg "$text-colour" -fg-active "$highlight" \
                                                 -hlbg "$bg-colour" -hlbg-active "$bg-colour" -hlfg "$text-colour" -hlfg-active "$text-colour" \
                                                 -font "Droid Sans Mono 12"

bindsym       $mod+Tab                 exec rofi -show window -location 0 -eh 1 -width 1366 -padding 340 -opacity 85 -bw 0 -bc "$inactive-bg-colour" \
                                                 -bg "$inactive-bg-colour" -bg-active "$bg-colour" -fg "$text-colour" -fg-active "$highlight" \
                                                 -hlbg "$bg-colour" -hlbg-active "$bg-colour" -hlfg "$text-colour" -hlfg-active "$text-colour" \
                                                 -font "Droid Sans Mono 16"

# I3 BAR
###############################################################################

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bindsym       $mod+b                   bar mode toggle

bar {
    #status_command                    i3status
    status_command                     i3blocks -c ~/.i3/i3blocks.conf
    font                               pango: FontAwesome, icomoon 8
    tray_padding                       1
    position                           bottom
    #strip_workspace_numbers yes
    colors {
        background                     $inactive-bg-colour
        statusline                     $text-colour
        separator                      $inactive-bg-colour
        # colorclass                   border               background           text
        focused_workspace              $bg-colour           $bg-colour           $text-colour
        inactive_workspace             $inactive-bg-colour  $inactive-bg-colour  $inactive-text-colour
        urgent_workspace               $bg-colour           $highlight           $text-colour
    }
}

