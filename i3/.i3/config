# RESIZE MODE
###############################################################################

bindsym       $mod+r                   mode "resize"

# Resize window (you can also use the mouse for that)
mode "resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        # Resize focused window - Vim bindings
    bindsym   j                        resize shrink width 10 px or 10 ppt
    bindsym   k                        resize grow height 10 px or 10 ppt
    bindsym   l                        resize shrink height 10 px or 10 ppt
    bindsym   semicolon                resize grow width 10 px or 10 ppt

    # Resize focused window - Cursor keys
    bindsym   Left                     resize shrink width 10 px or 10 ppt
    bindsym   Down                     resize grow height 10 px or 10 ppt
    bindsym   Up                       resize shrink height 10 px or 10 ppt
    bindsym   Right                    resize grow width 10 px or 10 ppt

    # Return to normal mode: Enter or Escape
    bindsym   Return                   mode "default"
    bindsym   Escape                   mode "default"
}

# MOUSE EMULATION MODE
###############################################################################

bindsym     $mod+$alt+Shift+m        mode "mouse"

mode "mouse" {
    # Set your three speeds here
    set       $slow                    1
    set       $quick                   10
    set       $fast                    50

    # Mouse movement (slow/fine-tuned) -- vim keybindings
    bindsym   j                        exec xdotool mousemove_relative -- -$slow 0
    bindsym   k                        exec xdotool mousemove_relative 0 $slow
    bindsym   l                        exec xdotool mousemove_relative -- 0 -$slow
    bindsym   semicolon                exec xdotool mousemove_relative $slow 0

    # Mouse movement (slow/fine-tuned) -- arrow keys
    bindsym   Left                     exec xdotool mousemove_relative -- -$slow 0
    bindsym   Down                     exec xdotool mousemove_relative 0 $slow
    bindsym   Up                       exec xdotool mousemove_relative -- 0 -$slow
    bindsym   Right                    exec xdotool mousemove_relative $slow 0

    # Mouse movement (quicker) -- vim keybindings
    bindsym   Shift+j                  exec xdotool mousemove_relative -- -$quick 0
    bindsym   Shift+k                  exec xdotool mousemove_relative 0 $quick
    bindsym   Shift+l                  exec xdotool mousemove_relative -- 0 -$quick
    bindsym   Shift+semicolon          exec xdotool mousemove_relative $quick 0

    # Mouse movement (quicker) -- arrow keys
    bindsym   Shift+Left               exec xdotool mousemove_relative -- -$quick 0
    bindsym   Shift+Down               exec xdotool mousemove_relative 0 $quick
    bindsym   Shift+Up                 exec xdotool mousemove_relative -- 0 -$quick
    bindsym   Shift+Right              exec xdotool mousemove_relative $quick 0

    # Mouse movement (fast) -- vim keybindings
    bindsym   Shift+$alt+j             exec xdotool mousemove_relative -- -$fast 0
    bindsym   Shift+$alt+k             exec xdotool mousemove_relative 0 $fast
    bindsym   Shift+$alt+l             exec xdotool mousemove_relative -- 0 -$fast
    bindsym   Shift+$alt+semicolon     exec xdotool mousemove_relative $fast 0

    # Mouse movement (fast) -- arrow keys
    bindsym   Shift+$alt+Left          exec xdotool mousemove_relative -- -$fast 0
    bindsym   Shift+$alt+Down          exec xdotool mousemove_relative 0 $fast
    bindsym   Shift+$alt+Up            exec xdotool mousemove_relative -- 0 -$fast
    bindsym   Shift+$alt+Right         exec xdotool mousemove_relative $fast 0

    # Mouse movement (special down-right)
    bindsym   m                        exec xdotool mousemove_relative 10 10

    # Left Click
    bindsym   s                        exec xdotool click 1
    # Middle Click
    bindsym   d                        exec xdotool click 2
    # Right Click
    bindsym   f                        exec xdotool click 3

    # Left Click-and-drag
    bindsym   Shift+s                  exec xdotool mousedown 1
    # Middle Click-and-drag
    bindsym   Shift+d                  exec xdotool mousedown 2
    # Right Click-and-drag
    bindsym   Shift+f                  exec xdotool mousedown 3

    # Left Drag release
    bindsym   $alt+s                   exec xdotool mouseup 1
    # Middle Drag release
    bindsym   $alt+d                   exec xdotool mouseup 2
    # Right Drag release
    bindsym   $alt+f                   exec xdotool mouseup 3

    # return to normal keybindings -- IMPORTANT!!
    bindsym   Escape                   mode "default"
    bindsym   Enter                    mode "default
}


# MPD CONTROL MODE
###############################################################################

bindsym       $mod+m                   mode "mpd"

mode "mpd" {
    # Basic controls (ncmpcpp bindings)
    bindsym   p                        exec mpc toggle; \
                                       exec pkill -RTMIN+10 i3blocks
    bindsym   s                        exec mpc stop; \
                                       exec pkill -RTMIN+10 i3blocks
    bindsym   Shift+comma              exec mpc prev; \
                                       exec pkill -RTMIN+10 i3blocks
    bindsym   Shift+period             exec mpc next; \
                                       exec pkill -RTMIN+10 i3blocks

    # Volume controls
    bindsym   Shift+=                  exec mpc volume +2; \
                                       exec pkill -RTMIN+10 i3blocks
    bindsym   Right                    exec mpc volume +2; \
                                       exec pkill -RTMIN+10 i3blocks

    bindsym   -                        exec mpc volume -2; \
                                       exec pkill -RTMIN+10 i3blocks
    bindsym   Left                     exec mpc volume -2; \
                                       exec pkill -RTMIN+10 i3blocks

    # Playback control
    bindsym   z                        random
    bindsym   r                        repeat
    bindsym   y                        single
    bindsym   Shift+r                  consume

    # Seek and time manipulation controls
    bindsym   f                        exec mpc seek +10
    bindsym   b                        exec mpc seek -10

    # Return to normal mode: Enter or Escape
    bindsym   Return                   mode "default"
    bindsym   Escape                   mode "default"
}

