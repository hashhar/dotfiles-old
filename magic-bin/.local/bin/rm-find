#!/usr/bin/env bash

print_usage() {
	printf "\nUsage:\n"
	printf "rm-find part-of-filename\n"
}

if [[ "$#" -ne 1 ]]
then
	print_usage
else
	printf "$(find . -name "*$1*")"
	printf "\nDo you want to delete this file? (y/[n]): "
	read choice
	if [[ -z "$choice" ]]
	then
		choice="n"
		printf "\nNo action taken.\n"
	fi
	if [[ "$choice" = "y" ]]
	then
		gvfs-trash "$(find . -name "*$1*")"
	fi
fi

